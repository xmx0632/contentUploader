{
  "name": "wechat-video-uploader",
  "version": "0.8.10",
  "description": "Automated video uploader for WeChat channels",
  "main": "main.js",
  "bin": {
    "wechat-video-uploader": "./main.js"
  },
  "scripts": {
    "start": "node main.js",
    "test": "jest"
  },
  "dependencies": {
    "axios": "^1.7.9",
    "csv-parser": "^3.0.0",
    "csv-writer": "^1.6.0",
    "dotenv": "^16.4.7",
    "puppeteer": "^22.15.0"
  },
  "devDependencies": {
    "jest": "^29.5.0",
    "mock-fs": "^5.2.0"
  },
  "pkg": {
    "scripts": [
      "main.js",
      "ai_util.js",
      "upload_common.js",
      "upload_weixin.js",
      "upload_rednote.js",
      "upload_kuaishou.js",
      "upload_douyin.js"
    ],
    "assets": [
      ".env.example",
      "content-msg.csv",
      "temp/**/*",
      "node_modules/puppeteer-core/**/*",
      "node_modules/dotenv/**/*",
      "node_modules/axios/**/*",
      "node_modules/csv-parser/**/*",
      "node_modules/csv-writer/**/*"
    ],
    "targets": [
      "node18-macos-arm64",
      "node18-macos-x64",
      "node18-win-x64",
      "node18-linux-x64"
    ],
    "outputPath": "dist"
  }
}