{
  "name": "wechat-video-uploader",
  "version": "1.0.0",
  "description": "Automated video uploader for WeChat channels",
  "main": "upload_weichat.js",
  "bin": "upload_weichat.js",
  "scripts": {
    "start": "node upload_weichat.js"
  },
  "dependencies": {
    "axios": "^1.7.9",
    "dotenv": "^16.4.7",
    "puppeteer": "^22.15.0"
  },
  "pkg": {
    "scripts": [
      "upload_weichat.js",
      "ai_util.js"
    ],
    "assets": [
      "run.bat",
      "run.sh",
      "ai_util.js",
      ".env.example",
      "temp/**/*",
      "node_modules/**/*"
    ],
    "targets": [
      "node18-win-x64",
      "node18-linux-x64",
      "node18-macos-x64",
      "node18-macos-arm64"
    ],
    "outputPath": "dist"
  }
}
